% Variant of Businger and Golub's QR with column pivoting
% Copyright (c) 2016 by Pranay Seshadri
%
% See Quintana-Orti's et al. (1996)
function [Q,R,P] = qr_BusingerGolub_pivoting(A)
[m,n] = size(A);
perm = 1 : n;

% Compute column norms
for j = 1 : n
   column_norms(i) = norm(A(:,j),2); 
end

% Reduction steps
for j = 1 : n
    [~,p] = max(column_norms(j:n));
    
    % If the highest norm is 0 then we are done!
    if(column_norms(p) == 0);
        break;
    end
    
    % Swap jth and pth columns!
    if(j ~= p)
        temp = perm(j);
        perm(j) = perm(p);
        perm(p) = temp;
        clear temp;
        
        temp = A(:,j);
        A(:,j) = A(:,p);
        A(:,p) = temp;
        clear temp;
        
        temp = column_norms(j);
        column_norms(j) = column_norms(
        
        
        
    
    

    
    
    
    
end








end